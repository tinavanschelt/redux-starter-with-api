{
  "name": "super-simple-react-starter",
  "version": "1.0.0",
  "description": "Heroku-ready super simple starter I use for (super tiny) personal projects.",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon index.js --exec babel-node --watch ./server --watch build",
    "build": "rm -rf dist/* && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack/webpack.prod.babel.js",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack/webpack.server.babel.js",
    "start": "cross-env NODE_ENV=production node dist/server-bundle.js",
    "test": "jest"
  },
  "author": "@tinavanschelt",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "express": "^4.17.1",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "json-server": "^0.15.0",
    "mini-css-extract-plugin": "^0.8.0",
    "nodemon": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "redux": "^4.0.4",
    "styled-components": "^4.3.2",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5",
    "webpack-merge": "^4.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.1",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "eslint-watch": "^5.1.2",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-dev-server": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  }
}
